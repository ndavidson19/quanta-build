apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ app_name }}-ingress
  namespace: {{ item }}
  annotations:
    kubernetes.io/ingress.class: nginx
spec:
  rules:
  - host: {{ ingress_host }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: {{ app_name }}
            port: 
              number: {{ service_port }}